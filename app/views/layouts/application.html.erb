<!DOCTYPE html>
<html>
  <head>
    <title>JournalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item <%= 'active' if current_page?(home_path) %>">
            <a class="nav-link" href= <%= home_path %> >Home</a>
          </li>
          <li class="nav-item <%= 'active' if current_page?(posts_path) %>">
            <a class="nav-link" href= <%= posts_path %> >Posts</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <form>
            <% if user_signed_in? %>
              <strong class="text-light"><%= "Logged in as: " + current_user.email %></strong>
              <span class="text-light">|</span>
              <%= link_to "Logout", logout_path, class: 'navbar-link text-secondary' %>
            <% else %>
              <%= link_to "Login", login_path, class: 'navbar-link text-secondary' %>
            <% end %>
          </form>
        </ul>
      </div>
    </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
