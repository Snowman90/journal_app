<div class="col-md-6 offset-md-3 margin">
  <h2>Edit your post</h2>

  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.text_area :note, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>